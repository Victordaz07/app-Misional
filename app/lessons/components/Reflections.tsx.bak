import React, { useState } from 'react';
import {
    View,
    Text,
    StyleSheet,
    TextInput,
    TouchableOpacity,
    ScrollView,
    Alert,
} from 'react-native';
import { useI18n } from '../../../context/I18nContext';

interface ReflectionsProps {
    lessonTitle: string;
    onSave: (reflection: string, shareWithMissionaries: boolean) => void;
}

export default function Reflections({ lessonTitle, onSave }: ReflectionsProps) {
    const { t } = useI18n();
    const [reflection, setReflection] = useState('');
    const [shareWithMissionaries, setShareWithMissionaries] = useState(false);

    const handleSave = () => {
        if (reflection.trim().length === 0) {
            Alert.alert(
                t('reflections.alertTitle'),
                t('reflections.alertMessage'),
                [{ text: t('reflections.ok') }]
            );
            return;
        }

        onSave(reflection.trim(), shareWithMissionaries);
    };

    const getCharacterCount = () => {
        return reflection.length;
    };

    const getCharacterCountColor = () => {
        const count = getCharacterCount();
        if (count > 1000) return '#ef4444';
        if (count > 800) return '#f59e0b';
        return '#6b7280';
    };

    return (
        <ScrollView style={styles.container}>
            <View style={styles.header}>
                <Text style={styles.title}>{t('reflections.title')}</Text>
                <Text style={styles.subtitle}>
                    {t('reflections.subtitle')} "{lessonTitle}"
                </Text>
            </View>

            <View style={styles.promptContainer}>
                <Text style={styles.promptTitle}>{t('reflections.promptTitle')}</Text>
                <Text style={styles.promptText}>{t('reflections.promptText')}</Text>
            </View>

            <View style={styles.inputContainer}>
                <TextInput
                    style={styles.textInput}
                    value={reflection}
                    onChangeText={setReflection}
                    placeholder={t('reflections.placeholder')}
                    placeholderTextColor="#9ca3af"
                    multiline
                    textAlignVertical="top"
                    maxLength={1500}
                />
                <View style={styles.characterCountContainer}>
                    <Text style={[styles.characterCount, { color: getCharacterCountColor() }]}>
                        {getCharacterCount()} / 1500
                    </Text>
                </View>
            </View>

            <View style={styles.shareContainer}>
                <TouchableOpacity
                    style={styles.checkboxContainer}
                    onPress={() => setShareWithMissionaries(!shareWithMissionaries)}
                >
                    <View style={[
                        styles.checkbox,
                        shareWithMissionaries && styles.checkboxChecked
                    ]}>
                        {shareWithMissionaries && (
                            <Text style={styles.checkmark}>âœ“</Text>
                        )}
                    </View>
                    <View style={styles.checkboxTextContainer}>
                        <Text style={styles.checkboxTitle}>{t('reflections.shareTitle')}</Text>
                        <Text style={styles.checkboxDescription}>{t('reflections.shareDescription')}</Text>
                    </View>
                </TouchableOpacity>
            </View>

            <View style={styles.privacyContainer}>
                <Text style={styles.privacyTitle}>{t('reflections.privacyTitle')}</Text>
                <Text style={styles.privacyText}>{t('reflections.privacyText')}</Text>
            </View>

            <TouchableOpacity style={styles.saveButton} onPress={handleSave}>
                <Text style={styles.saveButtonText}>{t('reflections.save')}</Text>
            </TouchableOpacity>
        </ScrollView>
    );
}

